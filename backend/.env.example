# Server Configuration
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=maxim_broadcast
DB_USER=postgres
DB_PASSWORD=your_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your_secret_key_here
JWT_EXPIRES_IN=24h

# OBS Configuration
OBS_PLUGINS_PATH=/usr/lib/obs-plugins
OBS_DATA_PATH=/usr/share/obs

# Media Storage
MEDIA_STORAGE_PATH=/var/lib/maxim-broadcast/media
MAX_UPLOAD_SIZE=500MB

# AI Services (Optional)
OPENAI_API_KEY=
STABLE_DIFFUSION_API_KEY=
WHISPER_MODEL_PATH=/models/whisper
